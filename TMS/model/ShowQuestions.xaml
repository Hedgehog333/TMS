<Window x:Class="TMS.model.ShowQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowQuestions" Height="486" MinWidth="719" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="359*"/>
            <ColumnDefinition Width="360*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Margin="10,45,10,10">
            <StackPanel Name="spListQuestions" >
                
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Margin="10,45,10,10" Grid.Column="1">
            <StackPanel Name="spListAnswers">
            </StackPanel>
        </ScrollViewer>
        <Label Content="Questions:" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="72"/>
        <Label Content="Answers:" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Width="66" Grid.Column="1"/>
        <Button Content="Add Question" HorizontalAlignment="Left" Margin="121,10,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnAddQuestion_Click"/>

    </Grid>
</Window>
